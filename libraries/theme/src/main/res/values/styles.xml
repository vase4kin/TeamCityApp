<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.ActionBar" parent="BaseTheme.ActionBar" />

    <style name="BaseTheme.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="BaseTheme.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryColorNavBarTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="WhiteColorNavBarTheme" parent="AppTheme" />

    <style name="WhiteColorNavBarWithSeparatorTheme" parent="AppTheme" />

    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>

</resources>