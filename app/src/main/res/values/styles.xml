<resources>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AccountsListTheme" parent="WhiteColorNavBarWithSeparatorTheme">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="BaseFloatingActionButton.NotVisible">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/default_fab_radius</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Header" parent="SingleSubTextSizeItem">
        <item name="android:id">@id/section_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/recycler_view_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/queued_status_bar_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Toolbar.NoElevation">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="LoginEditTextTheme" parent="BaseEditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="BaseEditTextStyle" />

    <style name="LoginEditText" parent="">
        <item name="android:theme">@style/LoginEditTextTheme</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="errorTextColor">@color/login_text_error_color</item>
        <item name="errorIconTint">@color/login_text_error_color</item>
    </style>

    <style name="Switch">
        <item name="android:paddingTop">@dimen/padding_switch</item>
        <item name="android:paddingBottom">@dimen/padding_switch</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text" />

    <style name="Text.Headline">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ShimmerStyle">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="shimmer_animation_duration">@integer/shimmer_length</item>
        <item name="shimmer_color">@color/divider_color</item>
    </style>

</resources>