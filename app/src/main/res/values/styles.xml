<resources>

    <style name="BaseFloatingActionButton.NotVisible">
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginEditTextTheme" parent="BaseEditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="BaseEditTextStyle" />

    <style name="LoginEditText" parent="">
        <item name="android:theme">@style/LoginEditTextTheme</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="errorTextColor">@color/login_text_error_color</item>
        <item name="errorIconTint">@color/login_text_error_color</item>
    </style>

    <style name="Switch">
        <item name="android:paddingTop">@dimen/padding_switch</item>
        <item name="android:paddingBottom">@dimen/padding_switch</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ShimmerStyle">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="shimmer_animation_duration">@integer/shimmer_length</item>
        <item name="shimmer_color">?attr/colorControlHighlight</item>
    </style>

</resources>