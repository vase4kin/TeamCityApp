<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/parameter_name_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.vase4kin.teamcityapp.login.view.EditTextNoAutofill
            android:id="@+id/parameter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_parameter_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.vase4kin.teamcityapp.login.view.EditTextNoAutofill
            android:id="@+id/parameter_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_parameter_value"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>